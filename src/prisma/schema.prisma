generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://dev:K0wloonTong!@localhost:5432/dev?schema=public"
}

model color {
  wreathid String @db.Uuid
  color    String @db.VarChar(30)
  wreath   wreath @relation(fields: [wreathid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_wreath")

  @@id([wreathid, color])
}

model timeoftheyear {
  wreathid      String @db.Uuid
  timeoftheyear String @db.VarChar(50)
  wreath        wreath @relation(fields: [wreathid], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_wreath")

  @@id([wreathid, timeoftheyear])
}

model wreath {
  id            String          @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title         String          @db.VarChar(255)
  size          Int
  price         Int
  pictureurl    String[]
  color         color[]
  timeoftheyear timeoftheyear[]
}
